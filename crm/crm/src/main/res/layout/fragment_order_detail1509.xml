<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f4"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dip"
        android:background="@color/gray_e6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view_container"
        android:background="@color/gray_f4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_f4"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/buyer_name_text_view"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/place_holder"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/buyer_phone_text_view"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    android:autoLink="phone"
                    android:gravity="right"
                    android:text="@string/place_holder"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/b_shop_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:text="@string/place_holder"
                android:textColor="@color/gray_33"
                android:textSize="14sp"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_150922_addr"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/deliver_address_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/place_holder"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/remark_container"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_marginBottom="4dip"
                    android:text="买家留言:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/remark_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_marginBottom="4dip"
                    android:text="@string/place_holder"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_99"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/seller_name_text_view"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/place_holder"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/seller_phone_text_view"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    android:autoLink="phone"
                    android:gravity="right"
                    android:text="@string/place_holder"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/store_name_text_view"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="卖家店铺: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/gray_33"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_150922_addr"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/saler_address_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/place_holder"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/gray_f4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="16dip"
                android:paddingRight="16dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:text="订单信息"
                        android:textColor="@color/gray_33"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/order_status_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/place_holder"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/green_19"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginBottom="6dip"
                    android:background="@color/gray_e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="16dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/gray_33"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/order_id_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_33"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/order_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_marginBottom="4dip"
                    android:text="下单时间: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/deliver_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_marginBottom="4dip"
                    android:text="配送时间: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pay_type_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_marginBottom="4dip"
                    android:text="支付方式: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/deliver_type_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:text="配送方式: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_33"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/gray_f4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="16dip"
                android:paddingBottom="8dp"
                android:paddingRight="16dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:text="金额小计"
                        android:textColor="@color/gray_33"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginBottom="6dip"
                    android:background="@color/gray_e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/orderform_pricetx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品金额"
                            android:paddingLeft="2dp"
                            android:textColor="@color/gray_33"
                            android:textSize="@dimen/orderform_tx_size_small" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/prod_mny_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="right"
                            android:text="￥"
                            android:textColor="@color/green_19"
                            android:textSize="@dimen/orderform_tx_size_big" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/deliver_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="运费金额"
                            android:textColor="@color/gray_33"
                            android:textSize="@dimen/orderform_tx_size_small" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/deliver_mny_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="+￥"
                            android:textColor="@color/green_19"
                            android:textSize="@dimen/orderform_tx_size_big" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/coupon_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/orderform_promotion_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="优惠金额"
                            android:textColor="@color/gray_33"
                            android:textSize="@dimen/orderform_tx_size_small" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/promotion_mny_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="-￥"
                            android:textColor="@color/green_19"
                            android:textSize="@dimen/orderform_tx_size_big" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bonus_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="优惠券金额"
                            android:textColor="@color/gray_33"
                            android:textSize="@dimen/orderform_tx_size_small" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/bonus_mny_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="-￥"
                            android:textColor="@color/green_19"
                            android:textSize="@dimen/orderform_tx_size_big" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/balance_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="余额支付"
                            android:textColor="@color/gray_33"
                            android:textSize="@dimen/orderform_tx_size_small" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/balance_mny_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="-￥"
                            android:textColor="@color/green_19"
                            android:textSize="@dimen/orderform_tx_size_big" />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="实付金额"
                            android:textColor="@color/gray_33"
                            android:textSize="@dimen/orderform_tx_size_small" />


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/amount_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="￥"
                            android:textColor="@color/green_19"
                            android:textSize="@dimen/orderform_tx_size_big" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/gray_f4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dip"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dip" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/gray_f4" />

                <com.tianpingpai.widget.FixedListView
                    android:id="@+id/products_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>