<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/check_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_150922_phone" />

                <EditText
                    android:id="@+id/check_phone_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="新客户联系方式"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/gray_66"
                    android:textColorHint="@color/gray_80"
                    android:textSize="15sp" />

            </LinearLayout>
            <Button
                android:id="@+id/check_customer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                style="@style/Widget.Button.Green"
                android:text="添加"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_150922_phone" />

                <TextView
                    android:id="@+id/customer_phone_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/gray_66"
                    android:textColorHint="@color/gray_80"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_type_tv_container"
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_150922_my_info_role" />

                <TextView
                    android:id="@+id/user_type_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="卖家"
                    android:padding="5dp"
                    android:textColor="@color/gray_66"
                    android:textColorHint="@color/gray_80"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_name_container"
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_150922_my_info_name" />

                <EditText
                    android:id="@+id/customer_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="客户姓名"
                    android:padding="5dp"
                    android:textColorHint="@color/gray_80"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/store_name_container"
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_margin="5dip"
                    android:src="@drawable/ic_150922_my_info_department" />

                <EditText
                    android:id="@+id/store_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:hint="商店名称"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/store_address_container"
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_margin="5dip"
                    android:src="@drawable/ic_150922_addr" />

                <EditText
                    android:id="@+id/store_address_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:hint="商店地址"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_container"
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_margin="5dip"
                    android:src="@drawable/ic_150922_area" />

                <TextView
                    android:id="@+id/seller_at_market_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择商圈"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/to_send_amount_container"
                style="@style/Widget.LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_150922_approve_corners5_gray_ed"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_margin="5dip"
                    android:src="@drawable/ic_150922_area" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="起送金额:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/to_send_amount"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_33"
                    android:textSize="15sp"
                    android:text="可配送商圈:"/>

                <LinearLayout
                    android:id="@+id/distribution_market_container"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
                <ImageView
                    android:id="@+id/add_market_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_151020_add_prod_img"/>

            </LinearLayout>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                style="@style/Widget.Button.Green"
                android:text="添加"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
