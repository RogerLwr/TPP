<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@color/gray_f5" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/order_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_f5"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/all_order_container"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/all_orders_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/ic_1030_dd_all_order" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/all_orders_image_view"
                    android:layout_toRightOf="@id/all_orders_image_view">

                    <TextView
                        style="@style/Widget.TextView.Mine.Item.New"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/dd_all_orders" />

                    <TextView
                        android:id="@+id/all_orders_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableEnd="@drawable/ic_1030_home_right_arrows"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_1030_home_right_arrows"
                        android:text="单"
                        android:textColor="@color/gray_33" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_e9" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/suspending_orders_container"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/suspending_orders_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/ic_1030_dd_no_dispose_orders" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/suspending_orders_image_view"
                    android:layout_toRightOf="@id/suspending_orders_image_view">

                    <TextView
                        style="@style/Widget.TextView.Mine.Item.New"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/dd_no_dispose_orders" />

                    <TextView
                        android:id="@+id/suspending_orders_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableEnd="@drawable/ic_1030_home_right_arrows"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_1030_home_right_arrows"
                        android:text="单"
                        android:textColor="@color/gray_33" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_e9" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/not_received_orders_container"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/not_received_orders_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/ic_1030_dd_no_harvest_orders" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/not_received_orders_image_view"
                    android:layout_toRightOf="@id/not_received_orders_image_view">

                    <TextView
                        style="@style/Widget.TextView.Mine.Item.New"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/dd_no_harvest_orders" />

                    <TextView
                        android:id="@+id/not_received_orders_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableEnd="@drawable/ic_1030_home_right_arrows"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_1030_home_right_arrows"
                        android:text="单"
                        android:textColor="@color/gray_33" />


                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/gray_f5" />

            <RelativeLayout
                android:id="@+id/complete_orders_container"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/complete_orders_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/ic_1030_dd_complete_orders" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/complete_orders_image_view"
                    android:layout_toRightOf="@id/complete_orders_image_view">

                    <TextView
                        style="@style/Widget.TextView.Mine.Item.New"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/dd_complete_orders" />

                    <TextView
                        android:id="@+id/complete_orders_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableEnd="@drawable/ic_1030_home_right_arrows"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_1030_home_right_arrows"
                        android:text="单"
                        android:textColor="@color/gray_33" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_e9" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_customer_orders_container"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/new_customer_orders_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/ic_1030_dd_new_customer_orders" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/new_customer_orders_image_view"
                    android:layout_toRightOf="@id/new_customer_orders_image_view">

                    <TextView
                        style="@style/Widget.TextView.Mine.Item.New"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/dd_new_customer_orders" />

                    <TextView
                        android:id="@+id/new_customer_orders_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableEnd="@drawable/ic_1030_home_right_arrows"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_1030_home_right_arrows"
                        android:text="单"
                        android:textColor="@color/gray_33" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>