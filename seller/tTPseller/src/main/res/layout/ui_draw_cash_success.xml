<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_f2"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dip"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_stroke_gray_rec"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50dp"
                android:src="@drawable/ic_cash_success_time"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/draw_cash_success"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/tx_1a"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/select_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/draw_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="支付宝"
                android:padding="10dp"
                android:textColor="@color/tx_999"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/draw_type_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="中国邮政银行    尾号3512"
                    android:padding="10dp"
                    android:gravity="end"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="20dp"
                    android:textSize="16dp"
                    android:textColor="@color/tx_1a"
                    android:layout_marginEnd="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/money_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:layout_marginLeft="12dp"
                android:padding="10dp"
                android:textColor="@color/tx_999"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />

            <EditText
                android:id="@+id/draw_money_et"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/bg_ccc"
                android:gravity="end"
                android:text="100.00"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_ccc"/>
    </LinearLayout>

    <Button
        android:id="@+id/draw_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textColor="@color/white"
        android:background="@drawable/shape_radius_10_bg_20"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

</LinearLayout>