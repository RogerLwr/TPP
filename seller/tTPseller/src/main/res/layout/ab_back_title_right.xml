<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:background="@color/white" >


    <LinearLayout
        android:id="@+id/title_container"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@id/ab_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="对账单"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/drop_view_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/ad"/>
    </LinearLayout>

    <ImageView
        android:id="@id/ab_back_button"
        android:layout_width="56dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/abc_list_selector_holo_dark"
        android:clickable="true"
        android:contentDescription="对账单"
        android:padding="16dip"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back_green" />

    <TextView
        android:id="@+id/ab_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="12dip"
        android:background="@color/white"
        android:text="筛选"
        android:textColor="@color/green"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_alignParentBottom="true"
        android:background="#bababa" />


</RelativeLayout>