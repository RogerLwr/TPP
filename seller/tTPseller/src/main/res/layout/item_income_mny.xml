<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="6dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="在线支付收入"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="¥88.8"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dip"
        android:layout_marginBottom="6dip"
        android:background="@color/gray_e6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/src_name_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/src_name_tag_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自买家: "
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/gray_4d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/src_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black_1a"
                    android:layout_marginBottom="6dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_id_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号: "
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/gray_4d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_id_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015082409060000001"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/black_1a"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/pay_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式: 支付成功"
                android:layout_marginBottom="6dp"
                android:textColor="@color/gray_4d"
                android:visibility="gone"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/consumed_date_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="消费日期: "
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/gray_4d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/consumed_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="2015-08-21 14:57:11"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/black_1a"
                    android:textSize="12sp" />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/arrived_date_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到账日期: "
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/gray_4d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/arrived_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-08-23 14:57:11"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/black_1a"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/order_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待确认"
            android:layout_gravity="bottom"
            android:textColor="@color/green_0c"
            />

    </LinearLayout>

</LinearLayout>
