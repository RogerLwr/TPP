<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_f2"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/bg_e6"
            android:drawableLeft="@drawable/ic_gantanhao"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_gantanhao"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:text="提现金额低于200元的亲们暂缓提现，还请谅解。"
            android:textColor="#ff8400" />


        <LinearLayout
            android:id="@+id/select_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/draw_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:padding="10dp"
                android:text="银行卡"
                android:textColor="@color/tx_1a"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/draw_type_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableEnd="@drawable/icon_arrow_down"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_arrow_down"
                    android:padding="10dp"
                    android:textColor="@color/tx_1a"
                    android:textSize="16dp" />
                <!-- android:text="中国邮政银行(3512)"-->
                <TextView
                    android:id="@+id/draw_tip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/draw_cash_bank"
                    android:textColor="@color/tx_999"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/bg_ccc" />

        <LinearLayout
            android:id="@+id/money_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:padding="10dp"
                android:text="金额(元)"
                android:textColor="@color/tx_1a"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/draw_money_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:hint="当前可提现金额是元"
                android:numeric="decimal"
                android:padding="10dp"
                android:textColorHint="@color/bg_ccc"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/draw_submit_btn"
        style="@style/Widget.Button.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="提交" />

</LinearLayout>