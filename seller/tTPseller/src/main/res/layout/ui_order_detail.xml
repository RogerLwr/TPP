<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bottom_panel_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_f4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reject_button"
            style="@style/Widget.Button.Green.Bordered"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="5dp"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="0dp"
            android:text="@string/reject_order" />

        <TextView
            android:id="@+id/action_button"
            style="@style/Widget.Button.Green"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="0dp"
            android:textSize="13sp"
            android:text="@string/accept_and_send_order"
            android:textColor="@color/white" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_panel_container"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/name_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:autoLink="phone"
                    android:text="@string/place_holder" />

                <TextView
                    android:id="@+id/store_name_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_text_view"
                    android:text="@string/place_holder" />

                <TextView
                    android:id="@+id/address_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/store_name_text_view"
                    android:text="@string/place_holder" />

            </RelativeLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/remark_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/gray_f4" />

                <TextView
                    style="@style/Widget.TextView.Item.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="12dp"
                    android:text="@string/buyer_remark" />

                <TextView
                    android:id="@+id/remark_text_view"
                    style="@style/Widget.TextView.Item.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="12dp"
                    android:textColor="@color/gray_99" />

            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray_f4" />

            <TextView
                style="@style/Widget.TextView.Item.Title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/order_info" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dip"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginStart="@dimen/margin_left"
                android:background="@color/gray_e6" />

            <TextView
                android:id="@+id/order_id_text_view"
                style="@style/Widget.TextView.Item.Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:text="@string/place_holder" />

            <TextView
                android:id="@+id/deliver_type_text_view"
                style="@style/Widget.TextView.Item.Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/place_holder" />

            <TextView
                android:id="@+id/order_time_text_view"
                style="@style/Widget.TextView.Item.Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/place_holder" />

            <TextView
                android:id="@+id/payment_type_text_view"
                style="@style/Widget.TextView.Item.Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/place_holder" />

            <TextView
                android:id="@+id/deliver_time_text_view"
                style="@style/Widget.TextView.Item.Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/place_holder" />

            <TextView
                android:id="@+id/has_coupon_text_view"
                style="@style/Widget.TextView.Item.Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="8dp"
                android:text="使用优惠券: " />

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray_f4" />

            <TextView
                style="@style/Widget.TextView.Item.Title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="金额小计" />

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginStart="@dimen/margin_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/amount_info" />


                <TextView
                    android:id="@+id/amount_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:gravity="end"
                    android:text="@string/place_holder" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon_amount_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="@string/coupon_amount" />

                <TextView
                    android:id="@+id/coupon_amount_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/place_holder" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/youhui_mny_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券金额:" />

                <TextView
                    android:id="@+id/youhui_mny_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/place_holder" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/balance_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="余额支付:" />

                <TextView
                    android:id="@+id/balance_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/place_holder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="@string/freight" />

                <TextView
                    android:id="@+id/deliver_fee_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/place_holder" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="0.5dp"
                style="@style/Widget.Line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/total_amount_text_view"
                    style="@style/Widget.TextView.Item.Line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/place_holder" />
            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray_f4" />

            <TextView
                style="@style/Widget.TextView.Item.Title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/products_info" />

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginStart="@dimen/margin_left" />

            <com.tianpingpai.widget.FixedListView
                android:id="@+id/product_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:paddingBottom="8dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
