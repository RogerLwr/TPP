<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contain_order_buyer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_bg_white_fa"
    android:orientation="vertical"
    android:padding="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buyer_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:text="土豪峰蔬菜馆"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_1a"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dip"
        android:layout_marginBottom="6dip"
        android:background="@color/gray_e6" />



    <TextView
        android:id="@+id/newly_order_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最近下单时间: 2015-08-19"
        android:textColor="@color/gray_4d"
        android:layout_marginBottom="6dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/order_num_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本月下单数量: 1000单"
        android:layout_marginBottom="6dp"
        android:textColor="@color/gray_4d"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/order_mny_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本月消费金额: 888.8"
        android:layout_marginBottom="6dp"
        android:textColor="@color/gray_4d"
        android:textSize="12sp" />

</LinearLayout>
