<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="top|center"
    android:orientation="vertical">

    <View
        style="@style/Widget.Line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/no_products_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/refuseorder_resone"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="无货"
            android:textColor="@color/refuseorder_text"
            android:textSize="15sp" />

        <CheckedTextView
            android:id="@+id/invalid_distance_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/refuseorder_resone"
            android:checked="false"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="距离太远"
            android:textColor="@color/refuseorder_text"
            android:textSize="15sp" />

        <CheckedTextView
            android:id="@+id/no_delivery_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/refuseorder_resone"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="暂无配送人员"
            android:textColor="@color/refuseorder_text"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/insufficient_money_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/refuseorder_resone"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="订单金额太小"
            android:textColor="@color/refuseorder_text"
            android:textSize="15sp" />

        <CheckedTextView
            android:id="@+id/other_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/refuseorder_resone"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="其他"
            android:textColor="@color/refuseorder_text"
            android:textSize="15sp" />

        <CheckedTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/refuseorder_resone"
            android:padding="8dp"
            android:visibility="invisible" />

    </LinearLayout>

    <EditText
        android:id="@+id/reason_edit_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_layoutbg"
        android:ems="10"
        android:gravity="top|start"
        android:hint="其他，请填写拒绝接收订单原因"
        android:padding="10dp"
        android:textColor="#5a5a5a"
        android:textCursorDrawable="@null"
        android:textSize="17sp" />

    <Button
        android:id="@+id/submit_button"
        style="@style/Widget.Button.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="确认" />
</LinearLayout>
