<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/ab_back_button"
        android:layout_width="56dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/abc_list_selector_holo_dark"
        android:clickable="true"
        android:paddingRight="1dip"
        android:paddingLeft="1dp"
        android:paddingStart="1dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back_green"
        android:paddingEnd="1dip" />

    <EditText
        android:id="@+id/keyword_edit_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:cursorVisible="true"
        android:drawablePadding="15dp"
        android:hint="请输入菜名关键字"
        android:background="@drawable/bg_ed_f4_corners_5"
        android:padding="5dp"
        android:textColor="@color/gray_33"
        android:textCursorDrawable="@null"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="4dip"
        android:background="@drawable/abc_list_selector_holo_light"
        android:paddingBottom="2dip"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:text="搜索"
        android:paddingTop="2dip"
        android:textColor="@color/gray_33"
        android:paddingEnd="2dip"
        android:paddingStart="2dip"
        android:layout_marginEnd="4dip" />
</LinearLayout>
