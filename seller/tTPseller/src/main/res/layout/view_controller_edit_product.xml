<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/category_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/product_category_text_view"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="商品类目"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:text=""
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/product_category_right_arrows"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="14dp"
                    android:src="@drawable/ic_new_back_green" />

            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/product_name_container"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/product_name_text_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="商品名称(必填)"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="14dp"
                    android:src="@drawable/ic_new_back_green" />
            </LinearLayout>



            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/prod_property_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/product_property_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:hint="商品属性"
                    android:paddingBottom="14dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="14dp"
                    android:text=""
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:padding="14dp"
                    android:src="@drawable/ic_new_back_green" />

            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/unit_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/tag_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="规格: "
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/specs_unit_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:visibility="gone"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/specs_text_view"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="0dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="14dp"
                    android:src="@drawable/ic_new_back_green" />

            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/tag_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="商品原价:"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/orange_f6"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/price_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="0dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/unit_text_view"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="14dp"
                    android:src="@drawable/ic_new_back_green" />

            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/coupon_unit_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:visibility="visible"
                android:clickable="true">

                <TextView
                    android:id="@+id/coupon_price_unit_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="促销价格:"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/orange_f6"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/coupon_price_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="0dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone"
                    android:inputType="numberDecimal"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/coupon_price_text_view"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="0dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/coupon_unit_text_view"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="14dp"
                    android:src="@drawable/ic_new_back_green" />

            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/images_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/product_img_container"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/product_image_view"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@drawable/ic_add_prod_img" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignTop="@+id/edit_img_button"
                        android:alpha="0.5"
                        android:background="#616161" />

                    <TextView
                        android:id="@+id/edit_img_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:text="编辑图片"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                </RelativeLayout>
            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:text="商品状态" />

                <RadioGroup
                    android:id="@+id/shelve_button_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/on_shelve_button"
                        style="@style/DeliveryTab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_rb_bg"
                        android:drawableStart="@drawable/selector_rb_bg"
                        android:padding="8dp"
                        android:text="上架" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/off_shelve_button"
                        style="@style/DeliveryTab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawableLeft="@drawable/selector_rb_bg"
                        android:drawableStart="@drawable/selector_rb_bg"
                        android:padding="8dp"
                        android:text="下架" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                </RadioGroup>

            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <Button
                android:id="@+id/set_promotion_btn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:background="@drawable/green_bordered_button_selector"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="设置促销"
                android:textColor="@color/green_0c"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@id/promotion_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sales_status_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="【促销被取消】"
                        android:textColor="@color/green_0c"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sales_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text=""
                        android:textColor="@color/gray_33"
                        android:textSize="12sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="12dp"
                    android:src="@drawable/ic_new_back_green" />


            </LinearLayout>

            <View
                style="@style/Widget.Line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit_button"
        style="@style/Widget.Button.Green.Solid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="@color/white"
        android:visibility="visible" />

</LinearLayout>

