<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
    <style name="top_title_bar">
        <item name="android:textColor">#606060</item>
        <item name="android:textSize">19sp</item>
    </style>
    
     <!-- 自定义评分控件  小形 -->
    <style name="MyRatingBarHeart" parent="@android:style/Widget.RatingBar">
        <!--<item name="android:progressDrawable">@drawable/my_rating_bar_heart</item>-->
        <item name="android:progressDrawable">@drawable/my_rating_bar_star</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>
    
    <!-- 自定义Dialog theme. -->
    <style name="CustomerDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/customerdialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 自定义数据加载对话框 -->
    <style name="CustomerLoadingTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>  
      	<item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/loadingdialog</item>
    </style>
    <!-- 底部导航栏样式 -->
    <style name="DeliveryTab">
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">#383734</item>
        <!-- <item name="android:background">@drawable/home_btn_bg</item> -->
    </style>
    <!-- 底部导航栏样式 -->
    <style name="shopRestRadioButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">#383734</item>
        <!-- <item name="android:background">@drawable/home_btn_bg</item> -->
    </style>




    <style name="line_top_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:background">@drawable/line_delive_top</item>
    </style>
    <style name="line_bottom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:background">@drawable/line_delive_bottom</item>
    </style>
    

     <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>
<!--         <item name="android:fitsSystemWindows">true</item> -->

</resources>