<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dip"
    android:background="@color/gray_eb"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/ab_back_button"
        android:layout_width="56dip"
        android:paddingRight="12dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/abc_list_selector_holo_dark"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back_green" />

    <Spinner
        android:id="@+id/ab_category_spinner"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/bg_spinner"
        android:gravity="center"
        android:padding="2dip" />

    <ImageView
        android:id="@+id/ab_add_button"
        android:layout_width="56dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/abc_list_selector_holo_dark"
        android:clickable="true"
        android:padding="2dip"
        android:scaleType="centerInside"
        android:src="@drawable/add_common_use" />

</LinearLayout>