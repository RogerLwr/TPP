<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_stroke_white_corner"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="12dp"
        android:paddingTop="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sale_number_text_view"
                style="@style/Widget.TextView.Content.Middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="@color/gray_b2"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:visibility="gone">

            <com.tianpingpai.widget.StarRatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:isIndicator="true"
                android:max="10"
                android:rating="3"
                android:stepSize="1"
                android:visibility="gone"
                app:emptyStar="@drawable/star_empty"
                app:fullStar="@drawable/star_big" />

            <TextView
                android:id="@+id/min_amount_text_view"
                style="@style/Widget.TextView.Content.Middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/green"
                android:textSize="10sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/address_text_view"
            style="@style/Widget.TextView.Title.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="地址"
            android:textColor="@color/gray_66"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/description_text_view"
                style="@style/Widget.TextView.Title.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="描述"
                android:textColor="@color/gray_66"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>


        <TextView
            android:id="@+id/address_edit_text"
            style="@style/Widget.TextView.Title.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dip"
            android:layout_marginTop="4dp"
            android:text="五道口"
            android:textColor="@color/gray_66"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/coupon_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dip"
            android:orientation="vertical"
            android:paddingTop="4dp" />

    </LinearLayout>
</LinearLayout>