<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:alpha="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_corner"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页公告"
                android:textColor="@color/black"

                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:paddingTop="30dp"
                android:paddingBottom="0dp"
                />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_home_notify_close"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/notification_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="20dp"
            android:text="打折大优惠,今日部分菜品打折大优惠,今日部分菜品打折大优惠,今日部分菜品打折大优惠,今日部分菜品打折大优惠,今日部分菜品打折大优惠"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            style="@style/line_top_style"
            />

        <TextView
            android:id="@+id/go_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="去看看"
            android:textSize="18sp"
            android:textColor="@color/green_0c"
            android:clickable="true"
            />

    </LinearLayout>
</RelativeLayout>
