<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/gray_e9">

    <View
        android:id="@+id/selection_view"
        android:layout_width="3.2dip"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:background="@color/green" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dip"
        android:layout_weight="1"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:textColor="@color/gray_4c"
        android:textSize="13sp" />

    <View
        android:id="@+id/dot_view"
        android:layout_width="4dip"
        android:layout_height="4dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/shape_red_dot" />

    <ImageView
        android:id="@+id/chevron_image_view"
        android:layout_width="9dip"
        android:layout_height="9dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="6dip"
        android:scaleType="centerInside" />

</LinearLayout>