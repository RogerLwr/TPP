<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="NestedWeights">

    <View
        android:id="@+id/content_holder"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dip"
        android:background="@color/gray_ec" />

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="6dp"
            tools:ignore="DuplicateIds">

            <ImageView
                android:id="@+id/tab_image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_home_highlight" />

            <TextView
                android:id="@+id/tab_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:checked="true"
                android:gravity="center"
                android:text="@string/home"
                android:textColor="@color/gray_66"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stores_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="6dp"
            tools:ignore="DuplicateIds">

            <ImageView
                android:id="@+id/tab_image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_stores_normal" />

            <TextView
                android:id="@+id/tab_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:checked="true"
                android:gravity="center"
                android:text="@string/stores"
                android:textColor="@color/gray_66"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shopping_cart_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="6dp"
            tools:ignore="DuplicateIds">

            <ImageView
                android:id="@+id/tab_image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_shopping_cart_normal" />
Ë›
            <TextView
                android:id="@+id/tab_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:checked="true"
                android:gravity="center"
                android:text="@string/shopping_cart"
                android:textColor="@color/gray_66"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="6dp"
            tools:ignore="DuplicateIds">

            <ImageView
                android:id="@+id/tab_image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_mine_normal" />

            <TextView
                android:id="@+id/tab_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:checked="true"
                android:gravity="center"
                android:text="@string/mine"
                android:textColor="@color/gray_66"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>