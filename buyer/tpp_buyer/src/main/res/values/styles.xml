<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 自定义Dialog theme. -->
    <style name="CustomerDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/customer_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 自定义数据加载对话框 -->
    <style name="CustomerLoadingTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/loadingdialogtran</item>
    </style>

    <!-- 定义Popuwindow样式 -->
    <style name="POPUAnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popu_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popu_bottom_out</item>
    </style>
    <!-- 标题样式 -->
    <style name="top_title_bar">
        <item name="android:textColor">#606060</item>
        <item name="android:textSize">@dimen/top_title_tx_size</item>
    </style>
    <!-- 标题样式 2 -->
    <style name="top_title_bar_small">
        <item name="android:textColor">#606060</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="home_title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="back_tv_style">
        <item name="android:textColor">#38b700</item>
        <item name="android:text">返回</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="top_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="line_top_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/line_delive_top</item>
    </style>

    <style name="line_bottom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/line_delive_bottom</item>
    </style>

    <style name="line_content_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/line_delive_content</item>
    </style>

    <style name="top_back_ll_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="top_right_tv_style">
        <item name="android:textColor">#38b700</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_bb</item>
    </style>
    <!-- 自定义评分控件 -->
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_bar</item>
        <item name="android:minHeight">27dp</item>
        <item name="android:maxHeight">27dp</item>
    </style>
    <!-- 自定义评分控件 心形 -->
    <style name="MyRatingBarHeart" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_bar_heart</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>
    <!-- 自定义评分控件 大星星 -->
    <style name="MyRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_bar_big</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
    <!-- 自定义评分控件   mid星星 -->
    <style name="MyRatingBarMid" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_bar_mid</item>
        <item name="android:minHeight">11.5dp</item>
        <item name="android:maxHeight">11.5dp</item>
    </style>

</resources>