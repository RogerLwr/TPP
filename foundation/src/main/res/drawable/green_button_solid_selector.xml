<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时的背景图片 -->
    <item android:drawable="@color/green" android:state_window_focused="false"/>
    <!-- 触摸模式下单击时的背景图片 -->
    <item android:drawable="@color/green_highlight" android:state_focused="false" android:state_pressed="true"/>
    <!-- 选中时的图片背景 -->
    <item android:drawable="@color/green_highlight" android:state_selected="true"/>
    <!-- 默认时的背景图片 -->
    <item android:drawable="@color/gray_af" android:state_enabled="false"/>
    <item android:drawable="@color/green"/>
</selector>