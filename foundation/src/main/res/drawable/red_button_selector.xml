<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 没有焦点时的背景图片 -->
    <item android:drawable="@drawable/red_button_normal" android:state_window_focused="false"/>
    <!-- 触摸模式下单击时的背景图片 -->
    <item android:drawable="@drawable/red_button_selected" android:state_focused="false" android:state_pressed="true"/>
    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/red_button_selected" android:state_selected="true"/>
    <item android:drawable="@drawable/orange_button_disabled" android:state_enabled="false"/> <!-- 默认时的背景图片 -->
    <item android:drawable="@drawable/red_button_normal"/>

</selector>