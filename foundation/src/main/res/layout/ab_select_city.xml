<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ec"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ab_close_button"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/abc_list_selector_holo_light"
        android:padding="@dimen/margin_left"
        android:text="@string/cancel"
        android:textColor="@color/green"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ab_title_text_view"
        style="@style/Widget.TextView.ActionBar.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/gray_33"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ab_right_button"
        style="@style/Widget.TextView.ActionBar.RightButton"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/abc_list_selector_holo_light"
        android:clickable="true"
        android:enabled="false"
        android:gravity="center"
        android:padding="@dimen/margin_left"
        android:textColor="@color/green"
        android:text="@string/okay"
        android:visibility="invisible" />

</LinearLayout>
